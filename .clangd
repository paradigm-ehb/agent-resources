CompileFlags:
  CompilationDatabase: .

  Add:
    - -std=c++17
    - -Wall
    - -Wextra
    - -Wno-unused-function
    - -g
    - -O0
    - -I/home/nasr/c/agent-c/unity.cc
    - -I/home/nasr/c/agent-c
    - -I/home/nasr/c/agent-c/grpc/generated

  Remove:
    # Linker flags (clangd must never see these)
    - -l*
    - -pthread

    # Codegen / ABI noise
    - -march=*
    - -mtune=*
    - -fPIC

    # Optimization flags (we enforce -O0 above)
    - -O*
    - -Ofast

Diagnostics:
  Suppress:
    # Generated-code and unity-build noise
    - pp_file_not_found
    - unused-command-line-argument
    - unknown-warning-option

Index:
  Background: Build
