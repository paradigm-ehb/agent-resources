CompileFlags:
  Add:
    # Project root (for #include "base/base.h", "libnet/ports.cc", etc.)
    - -I.
    
    # Generated proto headers (if they go into build/)
    - -Ibuild
    
    # System includes for gRPC/protobuf
    - -I/usr/include
    - -I/usr/local/include
    - -I/home/nasr/paradigm/agent/pkg/agent-resources
    - -Iagent
    - -Ilocal
    - -Wall
    - -g
    - -O0
    
  Remove:
    # Strip optimization flags that confuse clangd
    - -O*
    - -march=*
    - -mtune=*
    - -fPIC
    - -Wall
    - -Wextra

# Suppress common noise
Diagnostics:
  Suppress:
    - unknown-warning-option
    - unused-command-line-argument
    - unknown-pragmas
  ClangTidy:
    Remove:
      - modernize-*
      - readability-identifier-length

# Optional: faster indexing
Index:
  Background: Build

---
# Force C mode for .h files
If:
  PathMatch: .*\.h$
CompileFlags:
  Add:
    - -xc
    - -std=c11

---
# Force C++ mode for .cc files
If:
  PathMatch: .*\.(cc|hpp|hh)$
CompileFlags:
  Add:
    - -xc++
    - -std=c++17
